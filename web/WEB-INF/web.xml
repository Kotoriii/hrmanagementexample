<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <error-page>
        <error-code>404</error-code>
        <location>/MenuTrabajadores.jsp</location>
    </error-page> 
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginB</servlet-name>
        <servlet-class>Servlets.LoginB</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>Servlets.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FlushDB</servlet-name>
        <servlet-class>Servlets.FlushDB</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EliminarSesion</servlet-name>
        <servlet-class>Servlets.EliminarSesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>modificarContra</servlet-name>
        <servlet-class>Servlets.modificarContra</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginB</servlet-name>
        <url-pattern>/LoginB</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FlushDB</servlet-name>
        <url-pattern>/FlushDB</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EliminarSesion</servlet-name>
        <url-pattern>/EliminarSesion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>modificarContra</servlet-name>
        <url-pattern>/modificarContra</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
